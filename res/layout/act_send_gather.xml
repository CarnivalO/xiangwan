<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">
    <ImageView 
        android:id="@+id/act_send_back"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/j1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="发布活动"
        android:textSize="16sp" 
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/act_send_gather_save"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/frag_icon_confirm"
        />"
</LinearLayout>
<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/act_send_gathername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/but_shape"
        android:hint="请输入活动名"
        android:minHeight="0dp"
        android:padding="7dp"
        android:singleLine="true" />
    <TextView 
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:textSize="19sp"
  	    android:text="价格:"/>
  	<EditText 
        android:id="@+id/act_send_gatherrmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/but_shape"
        android:singleLine="true"
        android:inputType="number"
        android:padding="7dp"
        android:text="0"
        />
  	<TextView 
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:textSize="19sp"
  	    android:text="￥"/>
  	 <Spinner 
        android:id="@+id/act_send_gather_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
  </LinearLayout>
    <requestFocus />
 
	</LinearLayout>    
	
	<EditText 
	    android:id="@+id/act_send_gathertitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/but_shape"
	    android:hint="输入活动简介"
	    android:minHeight="0dp"
	    android:padding="7dp"
	    android:singleLine="true"/>

	<EditText
	    android:id="@+id/act_send_gatherintro"
	    android:layout_width="fill_parent"
	    android:layout_height="110dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/but_shape"
	    android:hint="请输入活动详细介绍"
	    android:maxHeight="130dp"
	    android:minHeight="0dp"
	    android:padding="7dp" />
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
    >
	<LinearLayout
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/but_shape"
	    android:gravity="center_vertical"
	    android:onClick="BaiduMap_Onclick"
	    android:orientation="horizontal"
	    android:padding="10dp" >
	    
	    <TextView 
	        android:id="@+id/act_send_gathersite"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="活动地点"
	        android:textColor="#00f"
	        />
	</LinearLayout>

	<LinearLayout
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/but_shape"
	    android:clickable="true"
	    android:gravity="center_vertical"
	    android:onClick="gather_imgOnclick"
	    android:orientation="horizontal"
	    android:padding="10dp" >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="图片介绍"
	        android:textColor="#00f"
	        />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/but_shape"
	    android:clickable="true"
	    android:gravity="center_vertical"
	    android:onClick="gather_imgOnclick"
	    android:orientation="horizontal"
	    android:padding="10dp" >
	   <TextView 
	    android:id="@+id/act_send_gathertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:singleLine="true"
        android:text="2015-10-09"
        android:textColor="#00f"/>
	   </LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="10dp"
	    >

	    <ImageView
	        android:id="@+id/act_send_gatherimg"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@drawable/hahaha"
	        android:scaleType="fitXY"
	         />
	    </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>
